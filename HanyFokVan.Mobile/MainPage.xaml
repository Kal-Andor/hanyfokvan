<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HanyFokVan.Mobile.ViewModels"
             xmlns:models="clr-namespace:HanyFokVan.Mobile.Models"
             x:Class="HanyFokVan.Mobile.MainPage"
             x:DataType="vm:MainViewModel"
             Title="Hány fok van?">

    <Grid RowDefinitions="Auto, *">
        <!-- Header with last updated info -->
        <StackLayout Grid.Row="0" 
                     Orientation="Horizontal" 
                     HorizontalOptions="FillAndExpand"
                     Margin="10,5">
            <Label Text="{Binding LastUpdatedText}"
                   FontSize="Caption"
                   TextColor="Gray"
                   VerticalOptions="Center"
                   HorizontalOptions="StartAndExpand"/>
        </StackLayout>

        <!-- Data List with Pull-to-Refresh -->
        <RefreshView Grid.Row="1"
                     Command="{Binding RefreshCommand}"
                     IsRefreshing="{Binding IsRefreshing}">
            <CollectionView ItemsSource="{Binding Items}"
                            SelectionMode="None">
                <CollectionView.EmptyView>
                    <StackLayout Padding="20">
                        <Label Text="No data loaded. Pull down to refresh."
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               FontSize="Body"/>
                    </StackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:WeatherData">
                        <Frame Margin="10,5"
                               Padding="15"
                               CornerRadius="10"
                               BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}">
                            <StackLayout>
                                <Label Text="{Binding Source}"
                                       FontSize="Caption"
                                       TextColor="Gray" />
                                <Label Text="{Binding TemperatureC, StringFormat='{0:F1}°C'}"
                                       FontSize="48"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                                <Label Text="{Binding Location}"
                                       FontSize="Body" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>

</ContentPage>
